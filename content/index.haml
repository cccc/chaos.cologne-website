#index-banner.parallax-container
  .section.no-pad-bot
    .container
      %br/
      %br/
      %h1.header.center.orange-text.text-lighten-2 Chaos Cologne
      .row.center
        %h5.header.col.s12.light Edge of Control
      .row.center
        .col.s6
          %a#download-button.btn-large.waves-effect.waves-light.orange.lighten-1{:href => "/Fahrplan"} Schedule
        .col.s6
          %a#download-button.btn-large.waves-effect.waves-light.cyan.lighten-1{:href => "https://1c2.prezale.de/"} Tickets
      %br/
      %br/
